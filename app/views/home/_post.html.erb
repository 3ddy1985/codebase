<% @posts.each do |post| %>
  <div class="post">
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <p>Posted on <%= post.created_at.strftime("%B %d, %Y") %></p>
    <% if post.user == current_user %>
      <%= button_to 'Edit', edit_post_path(post), method: :get %>
      <%= button_to 'Delete', delete_post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
<% end %>

